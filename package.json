{
  "name": "jsyncd",
  "version": "1.0.0",
  "type": "module",
  "description": "live file monitor and rsync daemon",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "daemon": "^1.1.0",
    "find-process": "^1.4.7",
    "option-parser": "github:jhundley9109/option-parser-js",
    "rsync": "github:jhundley9109/rsync"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "eslint": "^8.14.0",
    "nodemon": "^2.0.16",
    "typescript": "^4.8.2"
  },
  "author": "Jacob Hundley <jhundley9109@gmail.com>",
  "bin": {
    "jsyncd": "./build/bin/index.js"
  },
  "scripts": {
    "test": "nodemon --watch . --watch ~/.config/jsyncd ./build/bin/index.js",
    "test_kill": "nodemon --watch . --watch ~/.config/jsyncd ./build/bin/index.js -- -k=1",
    "prestart": "npm run tsc",
    "start": "node ./build/bin/index.js ",
    "build": "npm run tsc",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jhundley9109/jsyncd"
  },
  "homepage": "https://github.com/jhundley9109/jsyncd#readme",
  "readmeFilename": "README.md",
  "license": "MIT",
  "keywords": [
    "rsync",
    "lsyncd",
    "chokidar",
    "file backup",
    "live sync",
    "directory mirroring"
  ]
}
